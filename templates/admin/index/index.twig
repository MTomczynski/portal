{% extends 'common/layout.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-md-offset-3">
            {% if is_logged_in() %}
                <a class="list-group-item active text-center" href="{{ path_for('admin-logout') }}">
                    Wyloguj
                </a>
            {% else %}
                <h1 class="text-center">Witaj!</h1>
                <form method="post" action="{{ formAction }}">
                    <div class="form-group">
                        <label for="user">Login:</label>
                        <input id="user" type="text" name="login" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="pass">Has≈Ço:</label>
                        <input id="pass" type="password" name="pass" class="form-control"/>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Zaloguj</button>
                </form>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
